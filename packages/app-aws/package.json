{
    "name": "@juicyllama/app-aws",
    "version": "0.0.34",
    "description": "Juicyllama NestJs AWS App",
    "author": {
        "name": "JuicyLlama Studio",
        "email": "studio@juicyllama.com",
        "url": "https://juicyllama.com"
    },
    "repository": {
        "type": "git",
        "url": "https://github.com/juicyllama-npm/app-aws"
    },
    "bugs": "https://github.com/juicyllama-npm/app-aws",
    "license": "0BSD",
    "readmeFilename": "README.md",
    "main": "dist/index.js",
    "files": [
        "dist/**/*",
        "*.md"
    ],
    "types": "dist/index.d.ts",
    "scripts": {
        "build": "tsc",
        "prepare": "npm run build",
        "format": "prettier --write \"src/**/*.ts\"",
        "lint": "eslint \"src/**/*.ts\" --fix",
        "test": "jest --runInBand --detectOpenHandles --forceExit",
        "test:clear": "npx jest --clearCache",
        "test:watch": "jest --watch",
        "test:cov": "jest --coverage",
        "test:e2e": "jest --config ./test/jest-e2e.json",
        "prerelease": "npm run format && npm run lint && npm run build && npm run test",
        "release": "release-it --ci",
        "release:minor": "release-it minor --ci",
        "release:major": "release-it major --ci"
    },
    "dependencies": {
        "@aws-sdk/client-s3": "^3.319.0",
        "@aws-sdk/client-secrets-manager": "^3.319.0",
        "@aws-sdk/client-sesv2": "^3.319.0",
        "@aws-sdk/client-sns": "^3.319.0",
        "@aws-sdk/lib-storage": "^3.319.0",
        "@juicyllama/core": "workspace:*",
        "@juicyllama/utils": "workspace:*"
    },
    "peerDependencies": {
        "@juicyllama/core": "workspace:*"
    },
    "devDependencies": {
        "@juicyllama/dev": "workspace:*"
    },
    "release-it": {
        "hooks": {
            "after:release": "echo âœ… Successfully released ${name} v${version} to ${repo.repository}."
        },
        "npm": {
            "publish": true
        },
        "github": {
            "release": false
        },
        "git": {
            "commit": true,
            "tag": true,
            "push": true,
            "requireCleanWorkingDir": false
        }
    }
}
