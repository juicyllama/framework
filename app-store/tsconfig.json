{
  "extends": "../../tsconfig.base.json",
  "compilerOptions": {
    "skipLibCheck": true,
    "allowJs": false,
    "lib": [
      "es5",
      "es6",
      "dom",
      "ESNext"
    ],
    "outDir": "./dist",
    "baseUrl": "src",
    "incremental": true,
    "forceConsistentCasingInFileNames": false,
    "noFallthroughCasesInSwitch": false,
    "resolveJsonModule": true,
    "esModuleInterop": true,
    "types": [
      "node",
      "jest",
      "multer"
    ]
  },
  "exclude": [
    "node_modules",
    "dist",
    "**/*spec.ts",
    "**/*.test.spec.ts",
    "**/*.test.paused.ts",
    "**/*.test.config.ts"
  ],
  "include": [
    "src/**/*.ts",
    "src/sandbox/**/*.ts"
  ]
}
