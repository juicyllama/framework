{
    "name": "@juicyllama/tools-shortlinks",
    "version": "0.0.8",
    "description": "Juicyllama NestJs Shortlinks Tool",
    "author": {
        "name": "JuicyLlama Studio",
        "email": "studio@juicyllama.com",
        "url": "https://juicyllama.com"
    },
	"publishConfig": {
		"access": "public",
		"registry": "https://registry.npmjs.org/"
	},
    "repository": {
        "type": "git",
        "url": "https://github.com/juicyllama/framework/tools/shortlinks"
    },
    "bugs": "https://github.com/juicyllama/framework",
    "license": "0BSD",
    "readmeFilename": "README.md",
    "type": "module",
    "exports": "./index.js",
    "types": "./dist/index.d.ts",
    "files": [
        "dist/**/*",
        "*.md"
    ],
    "scripts": {
        "prebuild": "rimraf dist",
        "prepare": "pnpm run build",
        "build": "tsc",
        "format": "prettier --write \"src/**/*.ts\"",
        "lint": "eslint \"src/**/*.ts\" --fix",
        "test": "export $(grep -v '^#' ../../.env.development) && NODE_ENV=test && vitest run"
    },
    "dependencies": {
        "nanoid": "^3.3.4",
        "@juicyllama/core": "workspace:*",
        "@juicyllama/utils": "workspace:*"
    },
    "devDependencies": {
        "@juicyllama/dev": "workspace:*"
    },
    "engines": {
        "node": ">=16"
    }
}
